{
  "packageRules": [
    {
      "description": "all RHDH workspaces",
      "matchFileNames": [
          "workspaces/bulk-import/**",
          "workspaces/global-floating-action-button/**",
          "workspaces/global-header/**",
          "workspaces/homepage/**", 
          "workspaces/marketplace/**", 
          "workspaces/openshift-image-registry/**",
          "workspaces/theme"
      ], 
      "addLabels": ["team/rhdh"]      
    },
    {
      "description": "Group all minor updates for RHDH Plugins",
      "matchUpdateTypes": ["minor"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "RHDH Dependencies (minor)"
    }    
  ]
}