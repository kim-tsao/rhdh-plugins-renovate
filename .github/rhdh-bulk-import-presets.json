{
  "packageRules": [
    {
      "description": "all RHDH Bulk Import workspaces",
      "matchFileNames": [
          "workspaces/bulk-import/**"
      ], 
      "addLabels": ["team/rhdh"]      
    },
    {
      "description": "Group all minor updates for RHDH Bulk Import Plugins",
      "matchUpdateTypes": ["minor"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "RHDH Bulk Import Dependencies (minor)"
    },
    {
      "description": "Group all patch updates for RHDH Bulk Import Plugins",
      "matchUpdateTypes": ["patch"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "RHDH Bulk Import Dependencies (patch)"
    },   
    {
      "description": "Group all minor/patch devdependencies updates for RHDH Bulk Import Plugins",
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "RHDH Bulk Import DevDependencies (non-major)"
    }     
  ]
}