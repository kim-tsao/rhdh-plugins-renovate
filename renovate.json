{
  "extends": [
    "config:best-practices",
    ":gitSignOff",
    ":rebaseStalePrs",
    "group:linters",
    "group:test",
    ":preserveSemverRanges"
  ],
  "ignorePresets": [":pinDevDependencies", ":pinDigest", "docker:pinDigests"],
  "labels": ["dependencies"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": false,
    "labels": ["dependencies", "security"]
  },
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "major": {
    "dependencyDashboardApproval": true
  },  
  "packageRules": [
    {
      "groupName": "DevDependencies (minor)",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },    
    {
      "groupName": "DevDependencies (patch)",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },      
    {
      "groupName": "Test packages (minor)",
      "matchDepNames": [
        "@playwright/{/,}**", 
        "msw", 
        "@testing-library/{/,}**"
      ],
      "matchUpdateTypes": [
        "minor"
      ]      
    }, 
    {
      "groupName": "Test packages (patch)",
      "matchDepNames": [
        "@playwright/{/,}**", 
        "msw", 
        "@testing-library/{/,}**"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },           
    {
      "groupName": "Kie Tools (minor)",
      "matchDepNames": [
        "@kie-tools-core/{/,}**", 
        "@kie-tools/{/,}**"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "groupName": "Kie Tools (patch)",
      "matchDepNames": [
        "@kie-tools-core/{/,}**", 
        "@kie-tools/{/,}**"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },    
    {
      "groupName": "types (minor)",
      "matchPackageNames": [
        "@types/{/,}**"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    },    
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "types (patch)",
      "matchPackageNames": [
        "@types/{/,}**"
      ]
    },      
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "matchPackageNames": ["node-fetch"],
      "allowedVersions": "<3.0.0"
    },
    {
      "matchPackageNames": ["typescript"],
      "allowedVersions": "~5.3.0"
    },
    {
      "matchPackageNames": ["yn"],
      "allowedVersions": "<5.0.0"
    },
    {
      "groupName": "Core Backstage packages",
      "dependencyDashboardApproval": true,
      "matchDepNames": ["/^@backstage//"]
    },
    {
      "description": "Group all minor/patch updates for RHDH Plugins",
      "matchFileNames": [
        "/workspaces/bulk-import/**",
        "/workspaces/global-floating-action-button/**",
        "/workspaces/global-header/**",
        "/workspaces/homepage/**", 
        "/workspaces/marketplace/**", 
        "/workspaces/openshift-image-registry/**",
        "/workspaces/theme"
      ],
      "additionalBranchPrefix": "rhdh ",
      "addLabels": ["team/rhdh"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "RHDH Dependencies (non-major)"
    },
    {
      "description": "Group all minor/patch updates for PAI Plugins",
      "matchFileNames": [
        "/workspaces/adoption-insights/**",
        "/workspaces/ai-integrations/**",
        "/workspaces/lightspeed/**"
      ],
      "additionalBranchPrefix": "pai ",
      "addLabels": ["team/pai"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "PAI Dependencies (non-major)"
    }, 
    {
      "description": "Group all minor/patch updates for Orchestrator Plugins",
      "matchFileNames": [
        "/workspaces/orchestrator/**"
      ],
      "additionalBranchPrefix": "orchestrator ",
      "addLabels": ["team/orchestrator"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "Orchestrator Dependencies (non-major)"
    },
    {
      "description": "Group all minor/patch updates for Sandbox Plugins",
      "matchFileNames": [
        "/workspaces/sandbox/**"
      ],
      "additionalBranchPrefix": "sandbox ",
      "addLabels": ["team/sandbox"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "groupName": "Sandbox Dependencies (non-major)"
    }               
  ],
  "ignorePaths": ["**/dist-dynamic/**"]
}
